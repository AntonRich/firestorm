.category-header
  %h2= @category.title
  .spacer
  %ul.actions
    %li
    %li
      %a.pure-button{href: "#{category_path(@conn, :new, parent_id: @category.id)}"}
        %i.fa.fa-plus
        New Category
      %a.pure-button.button-primary{href: "#{category_thread_path(@conn, :new, @category.slug)}"}
        %i.fa.fa-plus
        New Thread

= render "_back.html", conn: @conn, parent: @category.parent

%h3 Threads
= ThreadView.render "_list.html", threads: @category.threads, conn: @conn
