.pure-menu.pure-menu-horizontal.navigation-menu
  %a.pure-menu-heading.pure-menu-link{href: "#{page_path(@conn, :home)}"}
    = render "_logo.html", conn: @conn

  %ul.pure-menu-list
    %li.pure-menu-item= link 'Home', to: page_path(@conn, :home), class: "pure-menu-link"
    - if logged_in?(@conn) do
      %li.pure-menu-item= link 'Log Out', to: auth_path(@conn, :delete), class: "pure-menu-link", method: :delete
