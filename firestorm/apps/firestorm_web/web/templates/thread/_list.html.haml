%ol.thread-list
  - for thread <- @threads do
    %li.thread-list-item
      .details
        .summary
          %a.title{href: "#{category_thread_path(@conn, :show, thread.category_id, thread.id)}"}= thread.title
          %a.user-name{href: "#"}
            @#{user(thread).username}
        .metadata
          %span.time Jan 21 2017 @ 1:52PM
      .supplemental
        .badge-block= length(thread.posts)
